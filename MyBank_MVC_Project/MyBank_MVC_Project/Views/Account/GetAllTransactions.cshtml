@using MyBank_MVC_Project.Models.Account
@using MyBank_MVC_Project.Models.Dto
@{
    ViewData["Title"] = "Account Page";
}

@model List<MyTransactions>

<div class="text-center">
    <h1 class="display-4">All Transaction</h1>
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No transactions available.</div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>PersonId</th>
                    <th>FromAccountId</th>
                    <th>ToAccountId</th>
                    <th>Amount</th>
                    <th>TransactionType</th>
                    <th>TimeStamp</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transaction in Model)
                {
                    <tr>
                        <td>@transaction.Id</td>
                        <td>@transaction.PersonId</td>
                        <td>@transaction.FromAccountId</td>
                        <td>@transaction.ToAccountId</td>
                        <td>@transaction.Amount</td>
                        <td>@transaction.transactionType</td>
                        <td>@transaction.TimeStamp</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
